{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@public/*": ["public/*"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@types/*": ["web/src/types/*"],
      "@types": ["web/src/types"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@pages/*": ["src/pages/*"],
      "@pages": ["src/pages"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@views/*": ["src/views/*"],
      "@views": ["src/views"],
      "@widgets/*": ["src/widgets/*"],
      "@widgets": ["src/widgets"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"],
    }
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"] 
}
